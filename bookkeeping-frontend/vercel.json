{
  "version": 2,
  "buildCommand": "npm install && npm run build -- --configuration=production",
  "outputDirectory": "dist/bookkeeping-frontend/browser",
  "rewrites": [
    { "source": "/api/organizations/:orgId/dashboard", "destination": "/api/organizations/dashboard" },
    { "source": "/api/organizations/:orgId/accounts", "destination": "/api/organizations/accounts" },
    { "source": "/api/organizations/:orgId/journal-entries", "destination": "/api/organizations/journal-entries" },
    { "source": "/api/organizations/:orgId/custom-fields", "destination": "/api/organizations/custom-fields" },
    { "source": "/api/organizations/:orgId/reports/trial-balance", "destination": "/api/organizations/reports-trial-balance" },
    { "source": "/api/organizations/:orgId/reports/balance-sheet", "destination": "/api/organizations/reports-balance-sheet" },
    { "source": "/api/organizations/:orgId/reports/profit-loss", "destination": "/api/organizations/reports-profit-loss" },
    { "source": "/api/organizations/:orgId/datev/validate", "destination": "/api/organizations/datev-validate" },
    { "source": "/api/organizations/:orgId/datev/export", "destination": "/api/organizations/datev-export" },
    { "source": "/api/organizations/:orgId/fiscal-periods", "destination": "/api/organizations/[orgId]/fiscal-periods" },
    { "source": "/api/organizations/:orgId", "destination": "/api/organizations/[orgId]" },
    { "source": "/api/account-frameworks/:frameworkId", "destination": "/api/account-frameworks/[frameworkId]" },
    { "source": "/api/accounts/:id", "destination": "/api/accounts/[id]" },
    { "source": "/api/custom-fields/:id", "destination": "/api/custom-fields/[id]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
